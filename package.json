{
  "name": "koa-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "kill": "lsof -t -i tcp:3000 | xargs kill",
    "prebuild": "rimraf build",
    "dev": "npm run kill && NODE_ENV=dev ts-node-dev --transpile-only --respawn --no-notify --quiet --clear src/server.ts",
    "build": "npm run prebuild && tsc",
    "start": "npm run kill && NODE_ENV=prod node build/server.js"
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Kasra Karami <Kasra.Karami.KK@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.6",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "typescript": "^5.1.3"
  }
