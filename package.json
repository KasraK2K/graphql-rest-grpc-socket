{
  "name": "koa-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "kill": "lsof -t -i tcp:3000 | xargs kill",
    "prebuild": "rimraf build",
    "dev": "npm run kill && NODE_ENV=development ts-node-dev --transpile-only --respawn --no-notify --quiet --clear src/server.ts",
    "build": "npm run prebuild && tsc",
    "start": "npm run kill && NODE_ENV=production node build/server.js"
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Kasra Karami <Kasra.Karami.KK@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@apollo/utils.logger": "^3.0.0",
    "@graphql-tools/load": "^8.0.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/url-loader": "^8.0.0",
    "chalk": "4.1.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.22.2",
    "graphql-tag": "^2.12.6",
    "koa": "^2.14.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/koa": "^2.13.6",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "typescript": "^5.1.3"
  }
