    "chalk": "4.1.2",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.22.2",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^4.0.1",
    "sofa-api": "^0.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
