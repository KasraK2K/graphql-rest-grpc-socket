{
  "name": "graphql-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "kill": "lsof -t -i tcp:3000 | xargs kill && lsof -t -i tcp:3500 | xargs",
    "prebuild": "rimraf build",
    "dev": "npm run kill && NODE_ENV=development ts-node-dev --transpile-only --respawn --no-notify --quiet --clear src/server.ts",
    "build": "npm run prebuild && tsc",
    "start": "npm run kill && NODE_ENV=production node build/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "docs": "rimraf docs && typedoc --options typedoc.json",
    "prepare": "husky install"
  },
  "keywords": [
    "boilerplate"
  ],
